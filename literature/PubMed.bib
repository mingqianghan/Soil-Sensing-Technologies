@article{yang_vanadium_2023,
	title = {Vanadium {Oxide}-{Doped} {Laser}-{Induced} {Graphene} {Multi}-{Parameter} {Sensor} to {Decouple} {Soil} {Nitrogen} {Loss} and {Temperature}.},
	volume = {35},
