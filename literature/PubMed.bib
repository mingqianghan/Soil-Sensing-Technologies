	journal = {Journal of environmental management},
	author = {Bai, Lulu and Shi, Peng and Li, Zhanbin and Li, Peng and Zhao, Zhun and Dong, Jingbin and Cui, Lingzhou},
	month = dec,
	year = {2022},
	pmid = {36179476},
	note = {Place: England},
	keywords = {*Phosphorus/analysis, *Soil, China, Environmental Monitoring/methods, Nitrogen/analysis, Runoff, Sediment, Slope-gully system, Soil nitrogen, Soil phosphorus, Vegetation pattern},
	pages = {116288},
}

