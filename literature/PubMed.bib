@article{mladenova_agricultural_2020,
	title = {Agricultural {Drought} {Monitoring} via the {Assimilation} of {SMAP} {Soil} {Moisture} {Retrievals} {Into} a {Global} {Soil} {Water} {Balance} {Model}.},
