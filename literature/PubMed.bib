	month = jul,
	year = {2010},
	pmid = {20417548},
	note = {Place: Netherlands},
	keywords = {*Geographic Information Systems, Models, Theoretical, Nitrogen/*analysis, Soil/*analysis},
	pages = {3310--3318},
}

@article{hardie_determining_2013,
	title = {Determining the frequency, depth and velocity of preferential flow by high frequency soil moisture monitoring.},
