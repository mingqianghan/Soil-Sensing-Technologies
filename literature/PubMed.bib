	author = {Babaeian, Ebrahim and Sidike, Paheding and Newcomb, Maria S. and Maimaitijiang, Maitiniyazi and White, Scott A. and Demieville, Jeffrey and Ward, Richard W. and Sadeghi, Morteza and LeBauer, David S. and Jones, Scott B. and Sagan, Vasit and Tuller, Markus},
	year = {2019},
	pmid = {33693360},
