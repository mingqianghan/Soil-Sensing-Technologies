	keywords = {*Environmental Monitoring, Animals, Fresh Water/*chemistry, Insecta/metabolism/*physiology, Nitrogen Cycle, Nitrogen/analysis/metabolism, Soil Pollutants/*analysis/metabolism, Soil/*chemistry, Trees/chemistry/metabolism, United Kingdom},
