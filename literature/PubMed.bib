	pmid = {37336433},
	note = {Place: Netherlands},
	keywords = {*Soil/chemistry, *Water, Cesium Radioisotopes, Empirical orthogonal function (EOF), Hydraulic conductivity (HC), Neutrons, Soil erosion, Soil moisture spatial variability (SMSV), Spain},
	pages = {116451},
}

