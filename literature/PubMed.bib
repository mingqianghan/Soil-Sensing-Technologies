	journal = {Sensors (Basel, Switzerland)},
	author = {Antonucci, Francesca and Pallottino, Federico and Costa, Corrado and Rimatori, Valentina and Giorgi, Stefano and Papetti, Patrizia and Menesatti, Paolo},
	year = {2011},
