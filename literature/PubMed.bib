	note = {Place: Netherlands},
	keywords = {*Nitrogen/analysis, *Soil, Agricultural forecasting, APSIM, Filter divergence, Forecasting, Illinois, Models, Theoretical, Nitrate leaching, Soil moisture, State-parameter data assimilation},
	pages = {153192},
}

