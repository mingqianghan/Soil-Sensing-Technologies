@article{moreno-espindola_bacterial_2018,
	title = {The {Bacterial} {Community} {Structure} and {Microbial} {Activity} in a {Traditional} {Organic} {Milpa} {Farming} {System} {Under} {Different} {Soil} {Moisture} {Conditions}.},
