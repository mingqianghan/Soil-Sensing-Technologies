	keywords = {*Humidity, *Microwaves, cotton moisture, Geology/*instrumentation, microwave moisture, microwave sensing, moisture sensing, permittivity, saline, salinity, Signal Processing, Computer-Assisted, Soil/*analysis, TDR},
	pages = {753--767},
}

