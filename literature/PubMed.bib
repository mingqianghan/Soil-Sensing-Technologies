	note = {Place: United States},
	keywords = {*Electric Power Supplies, *Environmental Monitoring, Aluminum/chemistry, Aniline Compounds/chemistry, Electrodes, Oxidation-Reduction, Potentiometry/instrumentation, Soil/*chemistry, Water/*analysis},
	pages = {7439--7445},
