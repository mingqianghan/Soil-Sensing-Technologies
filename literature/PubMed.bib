@article{okasha_designing_2021,
	title = {Designing {Low}-{Cost} {Capacitive}-{Based} {Soil} {Moisture} {Sensor} and {Smart} {Monitoring} {Unit} {Operated} by {Solar} {Cells} for {Greenhouse} {Irrigation} {Management}.},
