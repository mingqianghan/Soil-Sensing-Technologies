@article{yang_land_2016,
	title = {Land {Surface} {Model} and {Particle} {Swarm} {Optimization} {Algorithm} {Based} on the {Model}-{Optimization} {Method} for {Improving} {Soil} {Moisture} {Simulation} in a {Semi}-{Arid}  {Region}.},
