	year = {2012},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2012WR011976},
	keywords = {Australia, data set, Murray Darling Basin, Murrumbidgee Catchment, semiarid, soil moisture},
