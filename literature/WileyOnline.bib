@article{chew_soil_2018,
	title = {Soil {Moisture} {Sensing} {Using} {Spaceborne} {GNSS} {Reflections}: {Comparison} of {CYGNSS} {Reflectivity} to {SMAP} {Soil} {Moisture}},
