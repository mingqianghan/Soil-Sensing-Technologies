	month = dec,
	year = {2023},
	note = {Journal Abbreviation: 2023 62nd IEEE Conference on Decision and Control (CDC)},
	keywords = {Adaptation models, Mathematical models, Moisture measurement, Reduced order systems, Sensor systems, Soil measurements, Soil moisture},
	pages = {7586--7591},
}

@inproceedings{g_s_m_framework_2023,
	title = {A {Framework} for {Developing} the {Next} {Generation} {Interactive} {Soil} {Moisture} {Forecasting} {System} {Using} the {Long}-{Short} {Term} {Memory} {Model}},
	isbn = {1946-0759},
	doi = {10.1109/ICMLA58977.2023.00300},
	abstract = {Soil moisture is crucial for agriculture and hydrology, but its accurate prediction is challenging due to inadequate representation of various complex land surface processes and meteorological influences. In this research, we employ the Long Short-Term Memory (LSTM) framework, a specific architecture of deep learning networks that is effective in processing time series data, for predicting soil moisture. We have developed the Next Generation Interactive Soil Moisture Forecasting System to advance skillful soil moisture predictions at sub-seasonal timescales by leveraging advanced analytics and deep learning, with LSTM at its core. We combined the state-of-the-art climate model's (Community Earth System Model Version 2) forecast that incorporates the effects of the large-scale climatic drivers, including sea-surface temperature and atmosphere circulation features into soil water forecast with the LSTM-based Deep Learning model. Our Deep Learning model understands the local forecast biases using the weekly hindcast data from 1999 to 2016. We used this trained LSTM model to test its performance from 2017 to 2021 and enhanced the forecast proficiency and aid in analyzing future soil moisture anomalies, i.e., departure from climatology using data fusion and spatial downscaling. For performance assessment, optimal metrics include Mean Absolute Error (MAE) values near 0 (0-0.6), Root Mean Square Error (RMSE) around 0.5, and Anomaly Correlation Coefficient (ACC) nearing 1. These breakthroughs in system design and modeling facilitate improved soil moisture prediction, benefiting water management and our understanding of land-atmosphere interactions.},
	booktitle = {2023 {International} {Conference} on {Machine} {Learning} and {Applications} ({ICMLA})},
	author = {{G. S. M} and {W. Lee} and {S. Kumar} and {Y. Duan} and {I. Rangwala}},
	month = dec,
	year = {2023},
	note = {Journal Abbreviation: 2023 International Conference on Machine Learning and Applications (ICMLA)},
	keywords = {Agriculture, Anomaly detection, Climate change, Data integration, Deep learning, Environmental monitoring, Hydrologic measurements, Land surface temperature, Long short term memory, LSTM framework, Meteorological data, Meteorology, Predictive modeling, Predictive models, Soil moisture, Spatial temporal resolution, Spatial-temporal dynamics, User centered design, User interface, User interfaces},
	pages = {1986--1993},
}

@inproceedings{a_nambiar_iot-enabled_2023,
	title = {{IoT}-{Enabled} {Optimized} {Irrigation} {System} using {Soil} {Moisture}},
	doi = {10.1109/ICIICS59993.2023.10421440},
	abstract = {Agriculture serves as a crucial foundation for developing any growing nation, being the primary source of sustenance and employment. However, in the face of a rapidly changing world, the agricultural sector must adapt to continue fulfilling its role in supporting the country. With climate change altering rainfall patterns, the traditional knowledge that has been passed down through generations for predicting rainfall is no longer adequate for ensuring efficient farming practices. This can result in situations where crops experience either inadequate hydration or excessive irrigation. Under-hydration can be detrimental to crop survival, while over-irrigation poses issues with soil aeration and salinity. The consequences of over-irrigation include increased weed growth and the development of diseases that may shorten plants’ lifespans and diminish overall tree health and vitality. To address these challenges, it becomes essential to adopt innovative techniques that conserve water during the irrigation process. In the proposed system, both soil moisture levels using a soil moisture sensor and the probability of precipitation over the field - fetched from the weather API - are continuously monitored. By combining data from these factors, an optimized decision is made to ensure the plants receive water only when necessary. This approach aims to enhance watering efficiency while promoting optimal plant growth and sustainability.},
	booktitle = {2023 {International} {Conference} on {Integrated} {Intelligence} and {Communication} {Systems} ({ICIICS})},
	author = {{A. Nambiar} and {R. Bhuvaneswari}},
	month = nov,
	year = {2023},
	note = {Journal Abbreviation: 2023 International Conference on Integrated Intelligence and Communication Systems (ICIICS)},
	keywords = {Crops, Internet of Things, IoT, Irrigation, Precipitation prediction, Rain, Raspberry Pi, Smart Irrigation system, Soil moisture, Sustainable development, Water resources},
	pages = {1--6},
}
