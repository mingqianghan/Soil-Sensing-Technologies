}

@inproceedings{l_c_shen_remote_2008,
	title = {Remote sensing stream flow and soil moisture by using reflected {GPS} {Signals} {L1} \& {L2} observation and {Doppler} shifts with an {Integrated} {GPS} {Receiver}},
