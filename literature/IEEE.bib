	keywords = {soil moisture, Remote sensing, Vegetation, Vegetation mapping, Numerical models, Geometry, Foldy-Lax multiple scattering equations, Scattering, Solid modeling, Mathematical model, NMM3D full-wave simulation, transmission},
	pages = {4704--4706},
}

