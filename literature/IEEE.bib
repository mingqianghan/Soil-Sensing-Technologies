	author = {{H. Wang} and {L. Zhang} and {J. Zhao} and {X. Hu} and {X. Ma}},
	year = {2022},
	keywords = {AdaBoost model, Analytical models, bat algorithm, Correlation, Hyperspectral, Hyperspectral imaging, machine learning, Optimization, Predictive models, Reflectivity, Soil measurements, soil nutrient content},
	pages = {100286--100299},
}

@article{r_dutta_adaptive_2013,
