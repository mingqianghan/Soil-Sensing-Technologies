	author = {{J. Kim} and {S. Grunwald} and {R. G. Rivero}},
	month = oct,
	year = {2014},
	keywords = {Biological system modeling, Digital soil model, entropy, Predictive models, Radio frequency, random forest (RF), Remote sensing, remote sensing (RS), Satellites, Soil, spatial resolution, Spatial resolution, wetland},
	pages = {6724--6737},
}

