	keywords = {Permittivity measurement, Electrodes, impedance measurement, Laboratories, Capacitance measurement, Frequency, Testing, Instruments, moisture measurement, soil measurements, Soil measurements, Skin effect, Admittance, conductivity measurement, Conductivity measurement, dielectric measurements, permittivity measurement},
