	month = jun,
	year = {2023},
	keywords = {Microwave measurement, Microwave resonator, Moisture measurement, open-end coaxial cable, Pollution measurement, Probes, Sensors, Soil measurements, soil moisture, Soil moisture},
	pages = {13575--13584},
}

