	keywords = {Accuracy, Estimation, microwave signals, Microwave theory and techniques, regression, remote sensing, Remote sensing, soil moisture, Soil moisture, support vector regression (SVR), Training},
	pages = {1080--1084},
}

@article{o_merlin_combined_2005,
	title = {A combined modeling and multispectral/multiresolution remote sensing approach for disaggregation of surface soil moisture: application to {SMOS} configuration},
