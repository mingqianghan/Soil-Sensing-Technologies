@article{n_ye_comparison_2024,
	title = {Comparison {Between} {Thermal}-{Optical} and {L}-{Band} {Passive} {Microwave} {Soil} {Moisture} {Remote} {Sensing} at {Farm} {Scales}: {Towards} {UAV}-{Based} {Near}-{Surface} {Soil} {Moisture} {Mapping}},
