	keywords = {Biological system modeling, Dynamic programming, energy conservation, Markov decision process, Markov processes, Moisture measurement, Probes, scheduling, Sensors, Soil measurements, Soil moisture, soil moisture sensing, stochastic optimal control, wireless sensor networks},
	pages = {1918--1933},
}

