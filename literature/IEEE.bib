	author = {{Y. Li} and {T. Xu} and {S. Yang} and {K. Yu} and {X. Chang} and {T. Jin}},
	year = {2024},
	keywords = {Antenna measurements, Carrier-to-noise (C/N₀), Dielectric constant, Estimation, Global navigation satellite system, global navigation satellite system (GNSS), Moisture measurement, power ratio, refraction pattern technique, Soil measurements, soil moisture, Soil moisture, soil temperature},
