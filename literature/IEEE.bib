	journal = {IEEE Sensors Journal},
	author = {{R. Dutta} and {A. Terhorst}},
	month = jun,
	year = {2013},
	keywords = {adaptive neuro-fuzzy inference system (ANFIS), cosmic ray sensor, multilayer perceptron network (MLPN), probabilistic neural network (PNN), radial basis function network (RBFN), soil moisture map, supervised machine learning},
